<h1>Create Event</h1>
<div class="row">
  <div class="f col-md-8">
<%= form_for(@event, url: event_path) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'b form-control' %>

  <%= f.label :event_description %>
  <%= f.text_area :body, class: 'form-control', size: "5x10" %>

  <%= f.submit "Create Event", class: "f btn btn-primary btn-lg btn-block" %>
<% end %> 
</div>

<div class="col-md-4">
	<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">To check out all of the events</h3>
  </div>
  <div class="panel-body">
    <%= link_to "Click Here", events_path, class: "btn btn-primary" %>
  </div>
</div>

</div>

</div>
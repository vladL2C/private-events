<div class = "row">
  <div class="col-md-6 col-md-offset-3">
<%= form_for(@user, url: signup_path, :html => {:class => 'form-horizontal'}) do |f| %>
  <fieldset>
    <%= render 'shared/error_messages', object: f.object %>
    <legend>Sign up</legend>

    <div class="form-group">

      <%= f.label :name, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
      <%= f.text_field :name, placeholder: "enter your name...", class: "form-control" %>
    </div>
    </div>

        <div class="form-group">
      <%= f.label :email, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
      <%= f.text_field :email, placeholder: "enter your email...", class: "form-control" %>
    </div>
    </div>

      <div class="form-group">
      <%= f.label :password, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
      <%= f.password_field :password, placeholder: "enter your password...", class: "form-control" %>
    </div>
    </div>
      
      <div class="form-group">
      <%= f.label :password_confirmation, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
      <%= f.password_field :password_confirmation, placeholder: "confirm your password...", class: "form-control" %>
    </div>
    </div>

        <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>

  </fieldset>
<% end %>
</div>
</div>
</div>
